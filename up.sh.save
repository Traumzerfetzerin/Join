#!/bin/bash

# Teste Verbindung zu GitHub
echo "Teste Verbindung zu GitHub..."
git ls-remote > /dev/null 2>&1

if [ $? -ne 0 ]; then
  echo "Verbindung fehlgeschlagen! Bitte überprüfe deine Git-Remote-URL oder SSH-Konfiguration."
  exit 1
fi

# Änderungen hinzufügen, committen und pushen
echo "Füge Änderungen hinzu..."
git add .

echo "Committe Änderungen..."
git commit -m "${1:-Automatischer Commit: $(date)}"

echo "Pushe Änderungen..."
git push

echo "Fertig!"

git pull
git add .
git commit -m "$*"
git push
